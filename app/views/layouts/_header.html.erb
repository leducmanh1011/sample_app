<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layout.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.name"), root_path %></li>
        <li><%= link_to t("static_pages.help.name"), helf_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layout.users_manager"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             <%= t("layout.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layout.profile"), current_user %></li>
              <li><%= link_to t("layout.settings"),
                                          edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layout.log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.login.name"), login_path %></li>
        <% end %>
        <li><%= link_to t("english"), locale: :en %></li>
        <li><%= link_to t("vietnamese"), locale: :vi %></li>
      </ul>
    </nav>
  </div>
</header>
