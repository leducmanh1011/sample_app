<% provide(:title, t("users.edit.name")) %>
<% provide(:button_text, t("users.edit.submit")) %>
<h1><%= t("users.edit.h1") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("users.edit.change"), "http://gravatar.com/emails",
       {target: "_blank"} %>
    </div>
  </div>
</div>
