<% provide(:title, t("static_pages.sign_up.name")) %>
<h1><%= t("static_pages.sign_up.name") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label t "static_pages.sign_up.user_name" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label t "static_pages.sign_up.email" %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t "static_pages.sign_up.password" %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label t "static_pages.sign_up.password_confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t("static_pages.sign_up.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
