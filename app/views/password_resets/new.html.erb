<% provide(:title, t("forgot_pass.name")) %>
<h1><%= t("forgot_pass.name") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label t("static_pages.login.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.submit t("forgot_pass.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
