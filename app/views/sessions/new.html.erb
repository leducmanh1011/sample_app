<% provide(:title, t("static_pages.login.name")) %>
<h1><%= t("static_pages.login.name") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label t("static_pages.login.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t("static_pages.login.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "static_pages.login.remember_me" %></span>
      <% end %>
      <%= f.submit t("static_pages.login.name"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "static_pages.login.new_user" %>?
    <%= link_to t("static_pages.login.signup_now"), signup_path %></p>
  </div>
</div>
